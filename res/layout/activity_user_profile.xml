<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_chat_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="c.alpha_hermes.ChatUser">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:src="@drawable/com_facebook_button_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:layout_weight="1" />

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/userNaam"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:text="Change Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNaam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/changeNaam" />

    <Button
        android:text="Change Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeName"
        android:layout_alignLeft="@+id/changeName"
        android:layout_alignStart="@+id/changeName"
        android:layout_marginTop="22dp"
        android:id="@+id/changeDp" />


</RelativeLayout>
